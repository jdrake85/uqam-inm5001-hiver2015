<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="battle" controller="gameGUI.GameState">
        <layer id="background" backgroundColor="#0001" childLayout="center">
            <panel id="body" width="1280px" height="720px" backgroundColor="#fff3" childLayout="center" align="center" valign="center">
                <panel id="turnBanner" width="10%" height="100%" backgroundColor="#fff3" childLayout="vertical" align="left" valign="center">
                    <panel id="charTurn1" width="100%" height="20%" backgroundColor="#f003" childLayout="vertical"  align="center" valign="top">
                        <image filename="Interface/Images/face1.png" childLayout="vertical" valign="center" align="center" height="100%" width="100%" >
                        </image>
                    </panel>
                    <panel id="charTurn2" width="100%" height="20%" backgroundColor="#0f03" childLayout="vertical" align="center" valign="center">
                        <image filename="Interface/Images/face2.png" childLayout="vertical" valign="center" align="center" height="100%" width="100%" >
                        </image>
                    </panel>
                    <panel id="charTurn3" width="100%" height="20%" backgroundColor="#00f3" childLayout="vertical" align="center" valign="center">
                        <image filename="Interface/Images/face3.png" childLayout="vertical" valign="center" align="center" height="100%" width="100%" >
                        </image>
                    </panel>
                    <panel id="charTurn4" width="100%" height="20%" backgroundColor="#f0f3" childLayout="vertical" align="center" valign="center">
                        <image filename="Interface/Images/face4.png" childLayout="vertical" valign="center" align="center" height="100%" width="100%" >
                        </image>
                    </panel> 
                    <panel id="charTurn5" width="100%" height="20%" backgroundColor="#0ff3" childLayout="vertical" align="center" valign="bottom">
                        <image filename="Interface/Images/face5.png" childLayout="vertical" valign="center" align="center" height="100%" width="100%" >
                        </image>
                    </panel> 
                </panel>                
                <panel id="characters" width="16%" height="100%" backgroundColor="#fff3" childLayout="vertical" align="right" valign="center">
                    <panel id="hero1" width="100%" height="33.3%" backgroundColor="#f003" childLayout="vertical" align="center" valign="top">
                        <panel id="hero1PicNstats" width="100%" height="64%" backgroundColor="#0ff3" childLayout="horizontal" align="center" valign="top">
                            <panel id="hero1stats" width="20%" height="100%" backgroundColor="#f0f3" childLayout="horizontal" align="left">                      
                                <panel id="hero1hp" width="50%" height="100%" backgroundColor="#f0f3" childLayout="vertical" align="left">
                                    <text id="text" font="Interface/Fonts/Arial.fnt" color="#fff" text="3458/5083" align="center" valign="center" wrap="true"/>
                                </panel> 
                                <panel id="hero1energy" width="50%" height="100%" backgroundColor="#0f03" childLayout="center" align="right">
                                </panel>   
                            </panel> 
                            <panel id="hero1Picture" width="80%" height="100%" backgroundColor="#0ff3" childLayout="horizontal" align="right" valign="top">
                                <image id="imageTest" filename="Interface/Images/face.png" childLayout="vertical" valign="center" align="center" height="100%" width="100%" >
                                </image>
                            </panel>
                        </panel>                        
                        <panel id="hero1Skills" width="100%" height="20%" backgroundColor="#ff03" childLayout="horizontal" align="center" valign="center">
                            <panel id="hero1Skill1" width="25%" height="100%" backgroundColor="#aa03" align="left" valign="center">
                                <interact onClick="hero1Skill1()"/>
                            </panel>
                            <panel id="hero1Skill2" width="25%" height="100%" backgroundColor="#0af3" align="center" valign="center">
                                <interact onClick="hero1Skill2()"/>
                            </panel>
                            <panel id="hero1Skill3" width="25%" height="100%" backgroundColor="#0a03" align="center" valign="center">
                                <interact onClick="hero1Skill3()"/>
                            </panel>
                            <panel id="hero1Skill4" width="25%" height="100%" backgroundColor="#a0a3" align="right" valign="center">
                                <interact onClick="hero1Skill4()"/>
                            </panel>
                        </panel>                                              
                        <panel id="hero1actions" width="100%" height="16%" backgroundColor="#fff3" childLayout="horizontal" align="center" valign="bottom">
                            <panel id="hero1move" width="50%" height="100%" backgroundColor="#aa03" align="left" valign="center">
                                <interact onClick="hero1move()"/>
                            </panel>
                            <panel id="hero1endTurn" width="50%" height="100%" backgroundColor="#a0a3" align="right" valign="center">
                                <interact onClick="hero1endTurn()"/>
                            </panel>
                        </panel>
                    </panel>
                    <panel id="hero2" width="100%" height="33.3%" backgroundColor="#0f03" childLayout="vertical" align="center" valign="center">
                        <panel id="hero2PicNstats" width="100%" height="64%" backgroundColor="#0ff3" childLayout="horizontal" align="center" valign="top">
                            <panel id="hero2stats" width="20%" height="100%" backgroundColor="#f0f3" childLayout="horizontal" align="left">                      
                                <panel id="hero2hp" width="50%" height="100%" backgroundColor="#f0f3" childLayout="vertical" align="left">
                                </panel> 
                                <panel id="hero2energy" width="50%" height="100%" backgroundColor="#0f03" childLayout="center" align="right">
                                </panel>   
                            </panel> 
                            <panel id="hero2Picture" width="80%" height="100%" backgroundColor="#0ff3" childLayout="horizontal" align="right" valign="top">
                                <image filename="Interface/Images/face.png" childLayout="vertical" valign="center" align="center" height="100%" width="100%" >
                                </image>
                            </panel>
                        </panel>                        
                        <panel id="hero2Skills" width="100%" height="20%" backgroundColor="#ff03" childLayout="horizontal" align="center" valign="center">
                            <panel id="hero2Skill1" width="25%" height="100%" backgroundColor="#aa03" align="left" valign="center">
                                <interact onClick="hero2Skill1()"/>
                            </panel>
                            <panel id="hero2Skill2" width="25%" height="100%" backgroundColor="#0af3" align="center" valign="center">
                                <interact onClick="hero2Skill2()"/>
                            </panel>
                            <panel id="hero2Skill3" width="25%" height="100%" backgroundColor="#0a03" align="center" valign="center">
                                <interact onClick="hero2Skill3()"/>
                            </panel>
                            <panel id="hero2Skill4" width="25%" height="100%" backgroundColor="#a0a3" align="right" valign="center">
                                <interact onClick="hero2Skill4()"/>
                            </panel>
                        </panel>                                              
                        <panel id="hero2actions" width="100%" height="16%" backgroundColor="#fff3" childLayout="horizontal" align="center" valign="bottom">
                            <panel id="hero2move" width="50%" height="100%" backgroundColor="#aa03" align="left" valign="center">
                                <interact onClick="hero2move()"/>
                            </panel>
                            <panel id="hero2endTurn" width="50%" height="100%" backgroundColor="#a0a3" align="right" valign="center">
                                <interact onClick="hero2endTurn()"/>
                            </panel>
                        </panel>
                    </panel>
                    <panel id="hero3" width="100%" height="33.3%" backgroundColor="#00f3" childLayout="vertical" align="center" valign="bottom">
                        <panel id="hero3PicNstats" width="100%" height="64%" backgroundColor="#0ff3" childLayout="horizontal" align="center" valign="top">
                            <panel id="hero3stats" width="20%" height="100%" backgroundColor="#f0f3" childLayout="horizontal" align="left">                      
                                <panel id="hero3hp" width="50%" height="100%" backgroundColor="#f0f3" childLayout="vertical" align="left">
                                </panel> 
                                <panel id="hero3energy" width="50%" height="100%" backgroundColor="#0f03" childLayout="center" align="right">
                                </panel>   
                            </panel> 
                            <panel id="hero3Picture" width="80%" height="100%" backgroundColor="#0ff3" childLayout="horizontal" align="right" valign="top">
                                <image filename="Interface/Images/face.png" childLayout="vertical" valign="center" align="center" height="100%" width="100%" >
                                </image>
                            </panel>
                        </panel>                        
                        <panel id="hero3Skills" width="100%" height="20%" backgroundColor="#ff03" childLayout="horizontal" align="center" valign="center">
                            <panel id="hero3Skill1" width="25%" height="100%" backgroundColor="#aa03" align="left" valign="center">
                                <interact onClick="hero3Skill1()"/>
                            </panel>
                            <panel id="hero3Skill2" width="25%" height="100%" backgroundColor="#0af3" align="center" valign="center">
                                <interact onClick="hero3Skill2()"/>
                            </panel>
                            <panel id="hero3Skill3" width="25%" height="100%" backgroundColor="#0a03" align="center" valign="center">
                                <interact onClick="hero3Skill3()"/>
                            </panel>
                            <panel id="hero3Skill4" width="25%" height="100%" backgroundColor="#a0a3" align="right" valign="center">
                                <interact onClick="hero3Skill4()"/>
                            </panel>
                        </panel>                                              
                        <panel id="hero3actions" width="100%" height="16%" backgroundColor="#fff3" childLayout="horizontal" align="center" valign="bottom">
                            <panel id="hero3move" width="50%" height="100%" backgroundColor="#aa03" align="left" valign="center">
                                <interact onClick="hero3move()"/>
                            </panel>
                            <panel id="hero3endTurn" width="50%" height="100%" backgroundColor="#a0a3" align="right" valign="center">
                                <interact onClick="hero3endTurn()"/>
                            </panel>
                        </panel>
                    </panel>   
                </panel>
            </panel>
        </layer>
    </screen>
     <screen id="mainMenu" controller="gameGUI.GameState">
        <layer id="background" backgroundColor="#0004" childLayout="center">
            <panel id="panel" height="15%" width="25%" align="center" valign="center" backgroundColor="#f60f" childLayout="center" visibleToMouse="true">
                <interact onClick="left()"/>
                <text id="text" font="Interface/Fonts/Arial.fnt" color="#00f" text="Left" align="center" valign="center" />
            </panel>
        </layer>
    </screen>
</nifty>
