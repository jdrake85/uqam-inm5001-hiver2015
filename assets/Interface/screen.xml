    <screen id="mainMenu" controller="gameGUI.GameState">
        <layer id="background" backgroundColor="#0004" childLayout="center">
            <panel id="bodyMain" width="100%" height="100%" backgroundColor="#0008" childLayout="vertical" align="center" valign="center">
                <panel id="title" width="100%" height="20%" backgroundColor="#0000" childLayout="vertical" align="center" valign="top">
                </panel>
                <panel id="controls" width="100%" height="80%" backgroundColor="#0000" childLayout="vertical" align="center" valign="bottom">
                    <panel id="buttons" width="100%" height="50%" backgroundColor="#0000" childLayout="vertical" align="center" valign="top">
                        <panel id="topButtons" width="100%" height="50%" backgroundColor="#0000" childLayout="vertical" align="center" valign="top">					
                            <panel id="emptyHalf" width="100%" height="50%" backgroundColor="#0000" childLayout="vertical" align="center" valign="top">							
                            </panel>
                            <panel id="bottomOfTheTop" width="100%" height="50%" backgroundColor="#0000" childLayout="vertical" align="center" valign="bottom">
                                <panel id="upper1" width="100%" height="50%" backgroundColor="#0000" childLayout="vertical" align="center" valign="top">
                                    <interact onClick="newGame()"/>
                                    <text id="text1" font="Interface/Fonts/Arial.fnt" color="#00f" text="New Game" align="center" valign="center" />
                                </panel>
                                <panel id="lower1" width="100%" height="50%" backgroundColor="#0000" childLayout="vertical" align="center" valign="bottom">
                                    <interact onClick="continueGame()"/>
                                    <text id="text2" font="Interface/Fonts/Arial.fnt" color="#00f" text="Continue" align="center" valign="center" />								
                                </panel>
                            </panel>					
                        </panel>
                        <panel id="bottomButtons" width="100%" height="50%" backgroundColor="#0000" childLayout="vertical" align="center" valign="bottom">
                            <panel id="topOfTheBottom" width="100%" height="50%" backgroundColor="#0000" childLayout="vertical" align="center" valign="top">
                                <panel id="upper2" width="100%" height="50%" backgroundColor="#0000" childLayout="vertical" align="center" valign="top">
                                    <interact onClick="loadGame()"/>
                                    <text id="text3" font="Interface/Fonts/Arial.fnt" color="#00f" text="Load Game" align="center" valign="center" />
                                </panel>
                                <panel id="lower2" width="100%" height="50%" backgroundColor="#0000" childLayout="vertical" align="center" valign="bottom">
                                    <interact onClick="saveGame()"/>
                                    <text id="text4" font="Interface/Fonts/Arial.fnt" color="#00f" text="Save Game" align="center" valign="center" />								
                                </panel>
                            </panel>
                            <panel id="bottomOfTheBottom" width="100%" height="50%" backgroundColor="#0000" childLayout="vertical" align="center" valign="bottom">
                                <panel id="upper3" width="100%" height="50%" backgroundColor="#0000" childLayout="vertical" align="center" valign="top">
                                    <interact onClick="quitGame()"/>
                                    <text id="text5" font="Interface/Fonts/Arial.fnt" color="#00f" text="Quit" align="center" valign="center" />
                                </panel>
                                <panel id="lower3" width="100%" height="50%" backgroundColor="#0000" childLayout="vertical" align="center" valign="bottom">
                                </panel>
                            </panel>
                        </panel>
                    </panel>
                    <panel id="footer" width="100%" height="50%" backgroundColor="#0000" childLayout="vertical" align="center" valign="bottom">
                    </panel>
                </panel>
