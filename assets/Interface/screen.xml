<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="start" controller="gameGUI.GameState">
        <layer id="layer" backgroundColor="#0004" childLayout="center">
            <panel id="panel" height="15%" width="25%" align="center" valign="center" backgroundColor="#f60f" childLayout="center" visibleToMouse="true">
                <interact onClick="left()"/>
                <text id="text" font="Interface/Fonts/Arial.fnt" color="#00f" text="Left" align="center" valign="center" />
            </panel>
        </layer>
    </screen>
</nifty>
